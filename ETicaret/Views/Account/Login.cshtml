@model ETicaret.Models.Account.LoginModels
@{
    ViewBag.Title = "Login";
}

<div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">

        @using (Html.BeginForm())
        {
            <div class="panel panel-default">
                <div class="panel-heading text-center">
                    <h2>Login</h2>
                    @if (ViewBag.ReError != null && string.IsNullOrEmpty((string)ViewBag.ReError) == false)
                    {
                        <small style="color:red;"> @ViewBag.ReError</small>
                    }
                    else
                    {
                        <small> Please enter e-mail and password.</small>
                    }
                </div>
                <div class="panel-body">

                    <div class="form-group">
                        <center>
                            <img src="http://placehold.it/125x125" class="img-circle img-responsive" />
                        </center>
                    </div>

                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Member.Email, new { @class = "form-control", @placeholder = "e-mail address", @type = "email" })
                        @*<input type="email" name="email" id="email" placeholder="e-mail address" class="form-control" />*@
                    </div>

                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Member.Password, new { @class = "form-control", @placeholder = "password", @type = "password" })
                        @*<input type="password" name="password" id="password" placeholder="password" class="form-control" />*@
                    </div>

                </div>
                <div class="panel-footer text-right">
                    <a href="#" class="btn btn-warning">
                        <span class="glyphicon glyphicon-asterisk"></span> Forgot Password
                    </a>
                    <button type="submit" class="btn btn-success">
                        <span class="glyphicon glyphicon-log-in"></span> Login
                    </button>

                </div>
            </div>
        }


    </div>
</div>

